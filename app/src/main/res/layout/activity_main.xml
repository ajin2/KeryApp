<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanaj.kery.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="우리 모두 KERY 합시다!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="209dp"
            android:orientation="horizontal"
            android:layout_weight="0.52"
            android:weightSum="1">

            <Button
                android:id="@+id/autoDrivingBtn"
                android:layout_width="100dp"
                android:layout_height="173dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Auto Driving" />

            <Button
                android:id="@+id/lockBtn"
                android:layout_width="100dp"
                android:layout_height="171dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/autoDrivingBtn"
                android:layout_weight="0.07"
                android:text="Lock" />
        </LinearLayout>

        <Button
            android:id="@+id/bluetoothBtn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="BlueTooth Connect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="158dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/gpsBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="GPS" />

            <Button
                android:id="@+id/weightBtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:text="Weight" />

            <Button
                android:text="Option"
                android:id="@+id/optionBtn"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
