<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hanaj.kery">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".gPS.GPSActivity" android:label="@layout/gps_layout"/>
        <activity android:name=".option.OptionActivity" android:label="@layout/option_layout"/>
        <activity android:name=".weight.WeightActivity" android:label="@layout/weight_layout"/>
        <activity android:name=".bluetooth.DeviceListActivity" android:theme="@android:style/Theme.DeviceDefault.Dialog"/>

    </application>

</manifest>